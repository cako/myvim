% Defining theorem, prop, problem and example environments.
\theoremstyle{plain}
\newtheorem{theorem}{Theorem}
\newtheorem{prop}{Proposition}
\theoremstyle{definition}
\newtheorem{problem}{Problem}
\newtheorem{example}{Example}


% New reference command:
% \ref{appendixA} -> A
% \myref{appendixA} -> Appendix A
\newcommand{\myref}[1]{\hyperref[#1]{\autoref*{#1}}}

% Provides autoref command for \myref.
% Redefines section and subsection, created new macro for the rest.
\def\sectionautorefname{Section}
\def\subsectionautorefname{Section}
\def\algorithmautorefname{Algorithm}
\def\theoremautorefname{Theorem}
\def\propautorefname{Proposition}
\def\problemautorefname{Problem}
\def\exampleautorefname{Example}

